.contacts
    text-align center
    padding-bottom 56px

.contacts-item
    display inline-block
    vertical-align top
    margin-right 60px
    margin-top 10px

    &:last-of-type
        margin-right 0

    &__icon
        display inline-block
        vertical-align top
        margin-right 14px

        &_type_mail
            sprite($mail)

        &_type_address
            sprite($map)

        &_type_phone
            sprite($call)

    &__text
        color #0f3751
        font-size 20px
        max-width 170px
        display inline-block
        text-decoration none
        font-family $OpenSansLight
        text-align left

        &[lang]
            font-family $OpenSansLight