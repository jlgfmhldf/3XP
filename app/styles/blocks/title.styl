.title
    color #0f3751
    font-size 40px
    text-align center
    padding 47px 0 20px

    &__text
        position relative
        display inline-block
        background #ffffff
        z-index 10

        &[lang='cn']
            font-family $JhengHeiBd

        &:before
        &:after
            content ''
            display inline-block
            size 138px 2px
            background-color #0f3751
            top 20px
            position absolute

        &:before
            left -164px

        &:after
            right -164px
