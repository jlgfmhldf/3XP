.team
    font-size 0

.team-item
    display inline-block
    width 50%
    text-align center

    &:nth-of-type(1)
    &:nth-of-type(2)
        margin-bottom 60px
        margin-top: 18px;

    &__wrapper
        display inline-block
        width 212px
        vertical-align top

    &__image
        size 170px
        background-color #1cadea
        border-radius 50%
        position relative
        margin auto

    &__photo
        position absolute
        bottom 0
        left 15px

    &__name
        padding-top 11px
        color #0f3751
        font-size 25px
        font-family $OpenSans

    &__profession
        padding-top 17px
        color #0f3751
        font-size 20px
        font-family $OpenSansLight

    &__btn
        size 212px 46px
        line-height 46px
        color #1cadea
        font-size 20px
        border 2px solid #1cadea
        cursor pointer
        border-radius 6px
        display block
        margin auto
        text-decoration none
        margin-top 25px
        transition-duration .2s

        &[lang='ru']
            line-height 42px

        &:hover
            background-color #00afed
            border 2px solid #00afed
            color #ffffff
